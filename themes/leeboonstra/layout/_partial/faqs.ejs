<div class="container writing">
  <div class="row justify-content-md-center">
      <div class="col" itemscope itemtype="https://schema.org/FAQPage">
        <h1><%-page.title %></h1>
        <p>I get tons of questions about Dialogflow each day. Here are some of these answered!</p>
    
        <dl>
        <% site.categories.findOne({name: 'FAQs'}).posts.sort('title', 1).forEach(function(post) { %>
          <dt itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
            <h2>
              <a href="<%- url_for(post.path) %>" itemprop="name"><%-post.title-%></a>
            </h2>
          </dt>
          <dd itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
            <div itemprop="text">
              <%- post.excerpt %>
            </div>
          </dd>
        <% }) %>
        </dl>

    </div>
  </div>
</div>