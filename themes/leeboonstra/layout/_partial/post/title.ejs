<% if (post.link){ %>
  <h1 itemprop="headline">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%- truncate(post.title, {length: 45, omission: '...'}) %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 itemprop="headline">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%- truncate(post.title, {length: 45, omission: '...'}) %></a>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="headline">
      <%- truncate(post.title, {length: 45, omission: '...'}) %>
    </h1>
  <% } %>
<% } %>