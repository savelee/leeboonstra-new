<div class="container abstracts">
    <div class="row justify-content-md-center">
      <div class="col">
      <h1><%-page.title %></h1>
  
      <% site.categories.findOne({name: 'Abstract'}).posts.forEach(function(post) { %>
      <div class="card w-50 p-2 float-md-left" >
        <div class="shadow-sm">
          <div class="card-body">
            <h2><%-post.title-%></h2>
            <p class="card-text"><%-post.excerpt-%></p>
            <a href="<%- url_for(post.path) %>" class="btn btn-primary stretched-link">Download Abstract</a>
          </div>
        </div>
      </div>
      <script type="application/ld+json">
        { "@context": "http://schema.org", 
        "@type": "BlogPosting",
        "headline": "<%- post.title %>",
        "genre": "technology", 
        "datePublished": "<%- post.date.toISOString() %>",
        "dateCreated": "<%- post.date.toISOString()  %>",
        "dateModified": "<%- post.updated.toISOString() %>",
        "publisher": {
          "@type": "Organization",
          "name": "Lee Boonstra",
          "logo": "<%- config.url %>/images/screen.png"
        },
        "description": "<%- post.description %>",
        "mainEntityOfPage": "<%- post.permalink %>",
        "image": "<%- config.url %>/images/screen.png",
        "articleBody": "<%- post.description %>",
        "author": {
          "@type": "Person",
          "name": "Lee Boonstra",
          "url": "https://www.leeboonstra.dev/abstracts/"
        }
        }
        </script>
      <% }) %>
  
    </div>
    </div>
  </div>