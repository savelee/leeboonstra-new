<div class="container abstracts">
    <div class="row justify-content-md-center">
      <div class="col">
      <h1><%-page.title %></h1>
  
      <% site.categories.findOne({name: 'Abstract'}).posts.forEach(function(post) { %>
      <div class="card w-50 p-2 float-md-left" >
        <div class="shadow-sm">
          <% if (post.featured_image){ %>
            <img class="card-img-top" src="<%- post.featured_image %>" alt="<%-post.title-%>">
          <% } %>
          <div class="card-body">
            <p class="card-text"><%-post.title-%></p>
            <a href="#" class="btn btn-primary stretched-link">Read more</a>
          </div>
        </div>
      </div>
      <script type="application/ld+json">
        { "@context": "http://schema.org", 
        "@type": "BlogPosting",
        "headline": "<%- post.title %>",
        "genre": "technology", 
        "datePublished": "<%- post.date.toISOString() %>",
        "dateCreated": "<%- post.date.toISOString()  %>",
        "dateModified": "<%- post.date.toISOString() %>",
        "publisher": {
          "@type": "Organization",
          "name": "Ladysign",
          "logo": "<%- config.url %>/images/screen.png"
        },
        "description": "Lee Boonstra's blog. <%- post.description %>",
        "mainEntityOfPage": "<%- post.permalink %>",
        "image": "<%- config.url %>/images/screen.png",
        "articleBody": "Lee Boonstra's blog. <%- post.description %>",
        "author": {
          "@type": "Person",
          "name": "Lee Boonstra",
          "url": "http://www.leeboonstra.dev"
        }
        }
        </script>
      <% }) %>
  
    </div>
    </div>
  </div>