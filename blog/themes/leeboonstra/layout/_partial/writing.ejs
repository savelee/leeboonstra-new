<div class="container writing">
  <div class="row justify-content-md-center">
      <div class="col">
        <h1><%-page.title %></h1>
        <p>Beside writing this blog, Iâ€™ve also published my work elsewhere.</p>
    
        <% site.categories.findOne({name: 'Writing'}).posts.forEach(function(post) { %>
        <div class="card w-25 p-2 float-md-left" >
          <div class="shadow-sm">
            <div class="card-body">
              
                <h2><%-post.title-%></h2>
                <span class="date">
                  <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, 'MMM Do YYYY') %></time>
                </span>
                <%- post.excerpt %>
            </div>
          </div>
        </div>
        <% }) %>
  
    </div>
  </div>
</div>